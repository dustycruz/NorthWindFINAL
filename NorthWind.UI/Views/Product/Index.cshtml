@using NorthWind.UI.Models.DTO
@model IEnumerable<ProductDto>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}


<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var p in Model)
            {
                <tr>
                    <td>@p.ProductName</td>
                    <td>@p.UnitPrice.ToString("C")</td>
                    <td>@p.UnitsInStock</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@p.ProductId" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-controller="Product" asp-action="Delete" asp-route-id="@p.ProductId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No products found.</td>
            </tr>
        }
    </tbody>
</table>
