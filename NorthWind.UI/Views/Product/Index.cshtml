
@using NorthWind.UI.Models.DTO
@model IEnumerable<ProductDto>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Discontinued</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var p in Model)
            {
                <tr>
                    <td>@p.ProductName</td>
                    <td>@p.UnitPrice</td>
                    <td>@p.Discontinued</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@p.ProductId" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@p.ProductId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
