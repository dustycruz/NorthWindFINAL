@model NorthWind.UI.Models.DTO.ProductDto

@{
    ViewData["Title"] = "Add New Product";
}

<h2>Add New Product</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UnitPrice" class="form-label"></label>
        <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UnitsInStock" class="form-label"></label>
        <input asp-for="UnitsInStock" class="form-control" type="number" />
        <span asp-validation-for="UnitsInStock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SupplierId" class="form-label"></label>
        <input asp-for="SupplierId" class="form-control" type="number" />
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <input asp-for="CategoryId" class="form-control" type="number" />
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
