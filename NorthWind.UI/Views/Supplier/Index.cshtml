@model IEnumerable<NorthWind.UI.Models.SupplierDto>

@{
    ViewData["Title"] = "Suppliers";
}

<h2>Suppliers</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Add Supplier</a>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No suppliers found.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Company Name</th>
                <th>Contact Name</th>
                <th>Phone</th>
                <th>Country</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                <tr>
                    <td>@supplier.Id</td>
                    <td>@supplier.CompanyName</td>
                    <td>@supplier.ContactName</td>
                    <td>@supplier.Phone</td>
                    <td>@supplier.Country</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@supplier.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@supplier.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this supplier?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
