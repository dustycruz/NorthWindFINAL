@model NorthWind.UI.Models.OrderDetailDto

<h2>Edit Order Detail</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="OrderId" class="form-label"></label>
                <input asp-for="OrderId" type="number" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="ProductId" class="form-label"></label>
                <input asp-for="ProductId" type="number" class="form-control" readonly />
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="UnitPrice" class="form-label"></label>
                <input asp-for="UnitPrice" type="number" step="0.01" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" type="number" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Discount" class="form-label"></label>
                <input asp-for="Discount" type="number" step="0.01" class="form-control" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
