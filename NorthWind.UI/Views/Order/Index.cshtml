@model IEnumerable<NorthWind.UI.Models.OrderViewModel>

@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Orders</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Order</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No orders found.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Customer ID</th>
                    <th>Employee ID</th>
                    <th>Order Date</th>
                    <th>Shipper ID</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.CustomerId</td>
                        <td>@order.EmployeeId</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>@order.ShipperId</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this order?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
