@model NorthWind.UI.Models.EmployeeDto

@{
    ViewData["Title"] = "Add Employee";
}

<h2>Add Employee</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="TitleOfCourtesy" class="form-label"></label>
                <input asp-for="TitleOfCourtesy" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" type="date" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="HireDate" class="form-label"></label>
                <input asp-for="HireDate" type="date" class="form-control" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Region" class="form-label"></label>
                <input asp-for="Region" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="PostalCode" class="form-label"></label>
                <input asp-for="PostalCode" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Country" class="form-label"></label>
                <input asp-for="Country" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="HomePhone" class="form-label"></label>
                <input asp-for="HomePhone" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="ReportsToId" class="form-label">Reports To (Manager ID)</label>
                <input asp-for="ReportsToId" class="form-control" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
