@model IEnumerable<NorthWind.UI.Models.DTO.CustomerDto>

@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>

<a asp-controller="Customer" asp-action="Add" class="btn btn-primary" style="margin-bottom:10px;">
    + Add Customer
</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Contact Name</th>
            <th>Address</th>
            <th>Country</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.ContactName</td>
                <td>@customer.Address</td>
                <td>@customer.Country</td>
            </tr>
        }
    </tbody>
</table>
